halt : Inst
addI : Inst <Reg 4> <Int 2>
subI : Inst <Reg 4> <Int 2>
addR : Inst <Reg 4> <Reg 4>
subR : Inst <Reg 4> <Reg 4>
ldm  : Inst <Reg 4> <Reg 4>
stm  : Inst <Reg 4> <Reg 4>
jp   : Inst <Int 4>
jpz  : Inst <Int 4>
out  : Inst <Reg 4>

inst   : Reg 8
pc     : Reg 4
buffer : Reg 8
r1     : Reg 4
r2     : Reg 4
r3     : Reg 4
r4     : Reg 4
outR   : Reg 4

<Reg 4> : Bits 2
<r1> = 0b00
<r2> = 0b01
<r3> = 0b10
<r4> = 0b11

<Inst> : Bits 8
<halt>         = 0b00000000
<addI <x> <n>> = 0b0001 ++ <x> ++ <n>
<subI <x> <n>> = 0b0010 ++ <x> ++ <n>
<addR <x> <y>> = 0b0011 ++ <x> ++ <y>
<subR <x> <y>> = 0b0100 ++ <x> ++ <y>
<ldm <x> <y>>  = 0b0101 ++ <x> ++ <y>
<stm <x> <y>>  = 0b0110 ++ <x> ++ <y>
<jp <n>>       = 0b0111 ++ <n>
<jpz <n>>      = 0b1000 ++ <n>
<out <x>>      = 0b1001 ++ <x> ++ 0b00

bufferI0  : Button 0
bufferI1  : Button 1
bufferI2  : Button 2
bufferI3  : Button 3
bufferI4  : Button 4
bufferI5  : Button 5
bufferI6  : Button 6
bufferI7  : Button 7
