dataMem : RAM 4 4
progMem : RAM 8 4

leds {
  led[7:0]   <- buffer
  led[15:8]  <- progMem[pc]
  led[19:16] <- pc
  led[23:20] <- outR
}

always {
  inst <- progMem[pc]
  pc <- pc + 1
}

halt {
  pc <- pc
}

addI <x> <n> {
  x <- x + (0b00 ++ n)
}

subI <x> <n> {
  x <- x - (0b00 ++ n)
}

addR <x> <y> {
  x <- x + y
}

subR <x> <y> {
  x <- x - y
}

ldm <x> <y> {
  x <- dataMem[y]
}

stm <x> <y> {
  dataMem[y] <- x
}

jp <n> {
  pc <- n
}

jpz <n> {
  pc <- outR == 0b0000 ? n : pc + 1
}

out <x> {
  outR <- x
}

bufferI0 {
  buffer <- buffer ^ 0b00000001
}

bufferI1 {
  buffer <- buffer ^ 0b00000010
}

bufferI2 {
  buffer <- buffer ^ 0b00000100
}

bufferI3 {
  buffer <- buffer ^ 0b00001000
}

bufferI4 {
  buffer <- buffer ^ 0b00010000
}

bufferI5 {
  buffer <- buffer ^ 0b00100000
}

bufferI6 {
  buffer <- buffer ^ 0b01000000
}

bufferI7 {
  buffer <- buffer ^ 0b10000000
}

